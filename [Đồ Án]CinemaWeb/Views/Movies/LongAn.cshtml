@{
    Layout = null;
}
<style type="text/css">
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: url(/Content/pictures/bgs6.jpg);
        background-size: contain;
        font-family: Arial, sans-serif;
    }

    /* Thanh đen trên cùng */
    .header-top {
        background-color: #000;
        padding: 10px 0; /* Khoảng cách trong */
        color: white;
        width: 100%;
        max-width: 1300px;
        margin: auto;
    }

    .container {
        display: flex;
        justify-content: space-between; /* Căn trái phải */
        align-items: center;
        max-width: 1300px;
        margin: 0 auto; /* Canh giữa container */
        padding: 0 20px;
    }

    /* Phần mạng xã hội bên phải */
    .right-social ul {
        list-style: none;
        display: flex;
        gap: 10px; /* Khoảng cách giữa các biểu tượng */
    }

        .right-social ul li {
            display: inline;
        }

            .right-social ul li a {
                font-size: 24px; /* Kích thước biểu tượng */
                color: #c06c84; /* Màu sắc của biểu tượng */
                transition: color 0.3s ease; /* Hiệu ứng chuyển màu khi hover */
            }

                .right-social ul li a:hover {
                    color: #c06c84
                }

    /* Phần liên kết bên trái */
    .left-text ul {
        list-style: none;
        display: flex;
        gap: 20px; /* Khoảng cách giữa các liên kết */
    }

        .left-text ul li {
            display: inline;
        }

            .left-text ul li a {
                color: white; /* Màu chữ trắng */
                text-decoration: none;
                font-size: 16px;
            }

                .left-text ul li a.btn {
                    background-color: #c06c84; /* Màu nền cam cho nút */
                    padding: 5px 10px; /* Khoảng cách trong của nút */
                    border-radius: 5px; /* Bo tròn góc nút */
                    color: white;
                }

                    .left-text ul li a.btn:hover {
                        background-color: #e69500; /* Màu khi hover trên nút */
                    }
    /* Logo */
    .logo img {
        max-height: 60px; /* Chiều cao tối đa cho logo */
        margin: 0 auto; /* Căn giữa logo */
    }

    /* Thanh menu */
    .header-menu {
        background-color: white;
        padding: 10px 0; /* Khoảng cách trong */
        color: white;
        width: 100%;
        max-width: 1300px;
        margin: auto;
    }

    .main-nav ul {
        list-style: none;
        display: flex;
        justify-content: space-evenly; /* Căn đều các mục */
        padding: 0; /* Bỏ padding cho ul */
        margin: 0; /* Bỏ margin cho ul */
    }

        .main-nav ul li {
            flex: 1; /* Mỗi mục chiếm đều một phần của không gian */
            text-align: center; /* Căn giữa nội dung */
        }

            .main-nav ul li a {
                text-decoration: none;
                color: #333; /* Màu chữ mặc định */
                font-size: 18px;
                padding: 15px 0; /* Khoảng cách trên và dưới */
                display: block; /* Bao phủ toàn bộ khu vực */
                min-width: 120px; /* Chiều rộng tối thiểu cho các mục */
                transition: background-color 0.3s, color 0.3s; /* Hiệu ứng chuyển màu */
            }

                .main-nav ul li a:hover {
                    background-color: #c06c84; /* Màu nền khi hover */
                    color: white; /* Màu chữ khi hover */
                }

            .main-nav ul li a {
                text-decoration: none;
                color: #333; /* Màu chữ mặc định */
                font-size: 18px;
                padding: 15px 0; /* Thêm khoảng cách trên và dưới */
                display: block; /* Thay đổi thành block để bao phủ toàn bộ khu vực */
                min-width: 120px; /* Đặt chiều rộng tối thiểu cho các mục */
                transition: background-color 0.3s, color 0.3s; /* Hiệu ứng chuyển màu */
            }

                .main-nav ul li a:hover {
                    background-color: #c06c84; /* Màu nền khi hover */
                    color: white; /* Màu chữ khi hover */
                }
    .schedule-container {
        width: 100%;
        max-width: 800px;
        margin: 50px auto;
        background-color: #fff;
        border: 1px solid #ddd;
        padding: 20px;
        text-align: center;
    }

    .browse-option-box {
        padding-bottom: 20px;
        border-bottom: 1px solid #ddd;
        background-color:#dcdcdc;
        padding: 10px;
        width: 100%;
        display: block;
        margin: auto;
        border: 3px solid #f37737;
        max-width:1300px;
    }

        .browse-option-box h3 {
            width: 100%;
            text-align: center;
            color: #f37a3b;
        }

        .browse-option-box p {
            width: 100%;
            text-align: center;
            color: #22272b;
        }

    .date-bar {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .date-item {
        flex: 1;
        padding: 10px;
        background-color: #f4f4f4;
        border: 1px solid #ddd;
        margin: 5px;
        font-size: 14px;
        color: #333;
        text-align: center;
    }

        .date-item.active {
            background-color: #f0643b;
            color: #fff;
        }

        .date-item:hover {
            background-color: #f0643b;
            color: #fff;
            cursor: pointer;
        }
    /* Header: Thanh điều hướng */
    header {
        background-color: #333;
        padding: 1rem 0;
    }

    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 80%;
        margin: auto;
    }

    .logo a {
        color: #fff;
        font-size: 1.5rem;
        font-weight: bold;
        text-decoration: none;
    }

    .nav-links {
        list-style: none;
    }

        .nav-links li {
            display: inline;
            margin-right: 20px;
        }

            .nav-links li a {
                color: #fff;
                text-decoration: none;
                font-size: 1rem;
            }

    .user-actions a {
        color: #fff;
        margin-left: 20px;
        text-decoration: none;
        background-color: #ff6600;
        padding: 0.5rem 1rem;
        border-radius: 5px;
    }


    main {
        padding: 2rem 0;
    }

    .movies-list {
        width: 80%;
        margin: auto;
    }

    .movie {
        display: flex;
        margin-bottom: 2rem;
        background-color: white;
        padding: 1rem;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .movie img {
            width: 150px;
            margin-right: 1rem;
            border-radius: 5px;
        }

    .movie-info {
        flex: 1;
    }

        .movie-info h2 {
            color: #333;
            margin-bottom: 0.5rem;
        }

    .showtimes {
        margin-top: 1rem;
    }

        .showtimes button {
            margin-right: 10px;
            padding: 0.5rem 1rem;
            background-color: #ff6600;
            border: none;
            color: white;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
        }

            .showtimes button:hover {
                background-color: #e55b00;
            }

    /* Footer */
    footer {
        background-color: #333;
        color: #fff;
        text-align: center;
        padding: 1rem 0;
    }
</style>
