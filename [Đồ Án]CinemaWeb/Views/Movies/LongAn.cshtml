<style type="text/css">
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: url(/Content/pictures/bgs6.jpg);
        background-size: contain;
        font-family: Arial, sans-serif;
    }

    /* Thanh đen trên cùng */
    .header-top {
        background-color: #000;
        padding: 10px 0; /* Khoảng cách trong */
        color: white;
        width: 100%;
        max-width: 1300px;
        margin: auto;
    }

    .container {
        display: flex;
        justify-content: space-between; /* Căn trái phải */
        align-items: center;
        max-width: 1300px;
        margin: 0 auto; /* Canh giữa container */
        padding: 0 20px;
    }

    /* Phần mạng xã hội bên phải */
    .right-social ul {
        list-style: none;
        display: flex;
        gap: 10px; /* Khoảng cách giữa các biểu tượng */
    }

        .right-social ul li {
            display: inline;
        }

            .right-social ul li a {
                font-size: 24px; /* Kích thước biểu tượng */
                color: #c06c84; /* Màu sắc của biểu tượng */
                transition: color 0.3s ease; /* Hiệu ứng chuyển màu khi hover */
            }

                .right-social ul li a:hover {
                    color: #c06c84
                }

    /* Phần liên kết bên trái */
    .left-text ul {
        list-style: none;
        display: flex;
        gap: 20px; /* Khoảng cách giữa các liên kết */
    }

        .left-text ul li {
            display: inline;
        }

            .left-text ul li a {
                color: white; /* Màu chữ trắng */
                text-decoration: none;
                font-size: 16px;
            }

                .left-text ul li a.btn {
                    background-color: #c06c84; /* Màu nền cam cho nút */
                    padding: 5px 10px; /* Khoảng cách trong của nút */
                    border-radius: 5px; /* Bo tròn góc nút */
                    color: white;
                }

                    .left-text ul li a.btn:hover {
                        background-color: #e69500; /* Màu khi hover trên nút */
                    }
    /* Logo */
    .logo img {
        max-height: 60px; /* Chiều cao tối đa cho logo */
        margin: 0 auto; /* Căn giữa logo */
    }

    /* Thanh menu */
    .header-menu {
        background-color: white;
        padding: 10px 0; /* Khoảng cách trong */
        color: white;
        width: 100%;
        max-width: 1300px;
        margin: auto;
    }

    .main-nav ul {
        list-style: none;
        display: flex;
        justify-content: space-evenly; /* Căn đều các mục */
        padding: 0; /* Bỏ padding cho ul */
        margin: 0; /* Bỏ margin cho ul */
    }

        .main-nav ul li {
            flex: 1; /* Mỗi mục chiếm đều một phần của không gian */
            text-align: center; /* Căn giữa nội dung */
        }

            .main-nav ul li a {
                text-decoration: none;
                color: #333; /* Màu chữ mặc định */
                font-size: 18px;
                padding: 15px 0; /* Khoảng cách trên và dưới */
                display: block; /* Bao phủ toàn bộ khu vực */
                min-width: 120px; /* Chiều rộng tối thiểu cho các mục */
                transition: background-color 0.3s, color 0.3s; /* Hiệu ứng chuyển màu */
            }

                .main-nav ul li a:hover {
                    background-color: #c06c84; /* Màu nền khi hover */
                    color: white; /* Màu chữ khi hover */
                }

            .main-nav ul li a {
                text-decoration: none;
                color: #333; /* Màu chữ mặc định */
                font-size: 18px;
                padding: 15px 0; /* Thêm khoảng cách trên và dưới */
                display: block; /* Thay đổi thành block để bao phủ toàn bộ khu vực */
                min-width: 120px; /* Đặt chiều rộng tối thiểu cho các mục */
                transition: background-color 0.3s, color 0.3s; /* Hiệu ứng chuyển màu */
            }

                .main-nav ul li a:hover {
                    background-color: #c06c84; /* Màu nền khi hover */
                    color: white; /* Màu chữ khi hover */
                }
            .main-nav ul li .dropdown-menu {
                display: none;
                position: absolute;
                background-color: #ffffff;
                padding: 0;
                list-style-type: none;
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
                z-index: 10; /* Ensure dropdown appears on top */
            }

            /* Show the dropdown when hovering over the parent li */
            .main-nav ul li:hover .dropdown-menu {
                display: block;
            }

    /* Style the dropdown links */
    .dropdown-menu li {
        padding: 8px 16px;
    }

        .dropdown-menu li a {
            text-decoration: none;
            color: #000;
            display: block;
        }

            .dropdown-menu li a:hover {
                background-color: #f0f0f0;
            }
    .schedule-container {
        width: 100%;
        max-width: 800px;
        margin: 50px auto;
        background-color: #fff;
        border: 1px solid #ddd;
        padding: 20px;
        text-align: center;
    }

    .browse-option-box {
        padding-bottom: 20px;
        border-bottom: 1px solid #ddd;
        background-color:#dcdcdc;
        padding: 10px;
        width: 100%;
        display: block;
        margin: auto;
        max-width:1300px;
    }

        .browse-option-box h3 {
            width: 100%;
            text-align: center;
            color: #f37a3b;
        }

        .browse-option-box p {
            width: 100%;
            text-align: center;
            color: #22272b;
        }

    .date-bar {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
        width:100%;
        max-width:1300px;
        margin:auto;
        background-color:#dcdcdc;
    }

    .date-item {
        flex: 1;
        padding: 10px;
        background-color:white;
        border: 1px solid #ddd;
        margin: 5px;
        font-size: 14px;
        color: #333;
        text-align: center;
        border-color:black;
    }

        .date-item.active {
            background-color: #f0643b;
            color: #fff;
        }

        .date-item:hover {
            background-color: #f0643b;
            color: #fff;
            cursor: pointer;
        }
    main {
        padding: 2rem 0;
        width:100%;
        max-width:1300px;
        margin:auto;
        background-color: #dcdcdc;
    }

    .movies-list {
        width: 80%;
        margin: auto;
    }

    .movie {
        display: flex;
        margin-bottom: 2rem;
        background-color: white;
        padding: 1rem;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .movie img {
            width: 150px;
            margin-right: 1rem;
            border-radius: 5px;
        }

    .movie-info {
        flex: 1;
    }

        .movie-info h2 {
            color: #333;
            margin-bottom: 0.5rem;
        }

    .showtimes {
        margin-top: 1rem;
    }

        .showtimes button {
            margin-right: 10px;
            padding: 0.5rem 1rem;
            background-color: #ff6600;
            border: none;
            color: white;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
        }

            .showtimes button:hover {
                background-color: #e55b00;
            }

    /* Footer */
    .footer-section {
        background-image: url('../../content/pictures/bgs2.jpg');
        color: #ffffff;
        padding: 40px 20px;
        font-size: 14px;
        width: 100%;
        max-width: 1300px;
        margin: auto;
    }

    .footer-container {
        display: flex;
        justify-content: center;
        max-width: 1300px;
        margin: 0 auto;
    }

    /* Phần thông tin liên hệ */
    .footer-info {
        width: 30%;
    }

    .footer-logo {
        max-width: 150px;
        margin-bottom: 20px;
    }

    .footer-info p {
        margin: 10px 0;
    }

    .footer-info a {
        color: #f37021;
        text-decoration: none;
    }

        .footer-info a:hover {
            text-decoration: underline;
        }

    /* Biểu tượng mạng xã hội */
    .social-icons a {
        color: #ffffff;
        margin-right: 10px;
        font-size: 18px;
    }

        .social-icons a:hover {
            color: #f37021;
        }

    /* Phần chính sách */
    .footer-policy {
        width: 30%;
    }

        .footer-policy h4 {
            color: #f37021;
            margin-bottom: 15px;
            font-size: 18px;
        }

        .footer-policy ul {
            list-style-type: none;
            padding: 0;
        }

            .footer-policy ul li {
                margin-bottom: 10px;
            }

                .footer-policy ul li a {
                    color: #ffffff;
                    text-decoration: none;
                }

                    .footer-policy ul li a:hover {
                        text-decoration: underline;
                    }

    /* Phần download app */
    .footer-download {
        width: 30%;
    }

        .footer-download h4 {
            color: #f37021;
            margin-bottom: 15px;
            font-size: 18px;
        }

    .app-icons img {
        max-width: 120px;
        margin-right: 10px;
    }

    .gov-badge {
        max-width: 150px;
        margin-top: 10px;
    }

    /* Phần thông tin công ty */
    .footer-company-info {
        text-align: left;
        margin-top: 40px;
        border-top: 1px solid #444;
        padding-top: 20px;
    }

        .footer-company-info p {
            margin: 5px 0;
        }

        .footer-company-info a {
            color: #f37021;
        }

    .black-wrapper {
        background-color: dimgray; /* Màu nền đen */
        padding: 30px; /* Khoảng cách xung quanh nội dung */
    }

</style>
