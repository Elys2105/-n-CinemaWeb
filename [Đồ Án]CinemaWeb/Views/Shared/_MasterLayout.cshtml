    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const slides = document.querySelectorAll('.now-showing-slide');
            const totalSlides = slides.length;
            let currentSlide = 1; // Slide bắt đầu ở giữa (index 1)

            function updateSlides() {
                slides.forEach((slide, index) => {
                    slide.classList.remove('active');
                    if (index === currentSlide) {
                        slide.classList.add('active');
                    }
                });

                // Di chuyển slider để hiển thị slide hiện tại với slide chính giữa
                const offset = -(currentSlide - 1) * (100 / 3); // Tính toán offset để giữ 3 slides hiển thị
                document.querySelector('.now-showing-slider-wrapper').style.transform = `translateX(${offset}%)`;
            }

            // Nút chuyển slide bên trái
            document.querySelector('.now-showing-slide-left').addEventListener('click', function () {
                currentSlide = (currentSlide > 0) ? currentSlide - 1 : totalSlides - 1;
                updateSlides();
            });

            // Nút chuyển slide bên phải
            document.querySelector('.now-showing-slide-right').addEventListener('click', function () {
                currentSlide = (currentSlide < totalSlides - 1) ? currentSlide + 1 : 0;
                updateSlides();
            });

            // Khởi động với slide đầu tiên
            updateSlides();
        });

    </script>
