                </div>
                <div class="carousel-item">
                    <img src="https://via.placeholder.com/200x300?text=%C4%90%E1%BB%8Bnh+M%E1%BB%87nh" alt="Định Mệnh" />
                    <p class="movie-title">Định Mệnh</p>
                </div>
            </div>

            <!-- Navigation Arrows -->
            <button class="carousel-control prev">‹</button>
            <button class="carousel-control next">›</button>
        </div>
    </div>

    <script src="~/Scripts/main.js"></script>
    <script src="~/Scripts/Booking.js"></script>
    <div>
        @RenderBody() <!-- Phần nội dung sẽ được render tại đây -->
    </div>
</body>
</html>
