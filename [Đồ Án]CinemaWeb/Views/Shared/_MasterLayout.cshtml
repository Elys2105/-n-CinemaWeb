                </div>
            </div>

            <!-- Navigation Arrows -->
            <button class="carousel-control prev">‹</button>
            <button class="carousel-control next">›</button>
        </div>
    </div>

    <!-- Phim Sắp Chiếu Section (also with slide effect) -->
    <div class="movie-sections">
        <h2 class="section-title">Phim: Sắp Chiếu</h2>
        <div class="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://via.placeholder.com/200x300?text=Venom" alt="Venom" />
                    <p class="movie-title">Venom</p>
                </div>
