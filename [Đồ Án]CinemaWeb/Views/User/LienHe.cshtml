@{
    Layout = null;
}
<style type="text/css">
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: url(/Content/pictures/bgs6.jpg);
        background-size: contain;
        font-family: Arial, sans-serif;
    }

    /* Thanh đen trên cùng */
    .header-top {
        background-color: #000;
        padding: 10px 0; /* Khoảng cách trong */
        color: white;
        width: 100%;
        max-width: 1300px;
        margin: auto;
    }

    .container {
        display: flex;
        justify-content: space-between; /* Căn trái phải */
        align-items: center;
        max-width: 1300px;
        margin: 0 auto; /* Canh giữa container */
        padding: 0 20px;
    }

    /* Phần mạng xã hội bên phải */
    .right-social ul {
        list-style: none;
        display: flex;
        gap: 10px; /* Khoảng cách giữa các biểu tượng */
    }

        .right-social ul li {
            display: inline;
        }

            .right-social ul li a {
                font-size: 24px; /* Kích thước biểu tượng */
                color: #c06c84; /* Màu sắc của biểu tượng */
                transition: color 0.3s ease; /* Hiệu ứng chuyển màu khi hover */
            }

                .right-social ul li a:hover {
                    color: #c06c84
                }

    /* Phần liên kết bên trái */
    .left-text ul {
        list-style: none;
        display: flex;
        gap: 20px; /* Khoảng cách giữa các liên kết */
    }

        .left-text ul li {
            display: inline;
        }

            .left-text ul li a {
                color: white; /* Màu chữ trắng */
                text-decoration: none;
                font-size: 16px;
            }

                .left-text ul li a.btn {
                    background-color: #c06c84; /* Màu nền cam cho nút */
                    padding: 5px 10px; /* Khoảng cách trong của nút */
                    border-radius: 5px; /* Bo tròn góc nút */
                    color: white;
                }

                    .left-text ul li a.btn:hover {
                        background-color: #e69500; /* Màu khi hover trên nút */
                    }
    /* Logo */
    .logo img {
        max-height: 60px; /* Chiều cao tối đa cho logo */
        margin: 0 auto; /* Căn giữa logo */
    }

    /* Thanh menu */
    .header-menu {
        background-color: white;
        padding: 10px 0; /* Khoảng cách trong */
        color: white;
        width: 100%;
        max-width: 1300px;
        margin: auto;
    }

    .main-nav ul {
        list-style: none;
        display: flex;
        justify-content: space-evenly; /* Căn đều các mục */
        padding: 0; /* Bỏ padding cho ul */
        margin: 0; /* Bỏ margin cho ul */
    }

        .main-nav ul li {
            flex: 1; /* Mỗi mục chiếm đều một phần của không gian */
            text-align: center; /* Căn giữa nội dung */
        }

            .main-nav ul li a {
                text-decoration: none;
                color: #333; /* Màu chữ mặc định */
                font-size: 18px;
                padding: 15px 0; /* Khoảng cách trên và dưới */
                display: block; /* Bao phủ toàn bộ khu vực */
                min-width: 120px; /* Chiều rộng tối thiểu cho các mục */
                transition: background-color 0.3s, color 0.3s; /* Hiệu ứng chuyển màu */
            }

                .main-nav ul li a:hover {
                    background-color: #c06c84; /* Màu nền khi hover */
                    color: white; /* Màu chữ khi hover */
                }

            .main-nav ul li a {
                text-decoration: none;
                color: #333; /* Màu chữ mặc định */
                font-size: 18px;
                padding: 15px 0; /* Thêm khoảng cách trên và dưới */
                display: block; /* Thay đổi thành block để bao phủ toàn bộ khu vực */
                min-width: 120px; /* Đặt chiều rộng tối thiểu cho các mục */
                transition: background-color 0.3s, color 0.3s; /* Hiệu ứng chuyển màu */
            }

                .main-nav ul li a:hover {
                    background-color: #c06c84; /* Màu nền khi hover */
                    color: white; /* Màu chữ khi hover */
                }
            .main-nav ul li .dropdown-menu {
                display: none;
                position: absolute;
                background-color: #ffffff;
                padding: 0;
                list-style-type: none;
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
                z-index: 10; /* Ensure dropdown appears on top */
            }

            /* Show the dropdown when hovering over the parent li */
            .main-nav ul li:hover .dropdown-menu {
                display: block;
            }

    /* Style the dropdown links */
    .dropdown-menu li {
        padding: 8px 16px;
    }

        .dropdown-menu li a {
            text-decoration: none;
            color: #000;
            display: block;
        }

            .dropdown-menu li a:hover {
                background-color: #f0f0f0;
            }
    .auth-buttons button {
        background-color: #ff6a00; /* Màu nền cam */
        border: none; /* Không có viền */
        padding: 5px 15px; /* Đệm dọc 5px, ngang 15px */
        margin-left: 10px; /* Khoảng cách trái 10px giữa các nút */
        color: white; /* Màu chữ trắng */
        cursor: pointer; /* Con trỏ thành hình bàn tay khi hover */
    }

        .auth-buttons button:hover {
            background-color: #e65c00; /* Đổi nền sang cam đậm khi hover */
        }

    /* Thiết lập kiểu cho vùng chính */
    main {
        display: flex; /* Sử dụng flex để bố trí ngang */
        justify-content: space-around; /* Căn đều các phần tử con */
        padding: 40px; /* Đệm quanh vùng chính */
        width: 100%; /* Chiếm toàn bộ chiều rộng */
        max-width: 1300px; /* Giới hạn chiều rộng tối đa 1300px */
        margin: auto; /* Căn giữa vùng chính */
    }

    /* Thiết lập kiểu cho thông tin liên hệ và form liên hệ */
    .contact-info, .contact-form {
        background-color: #ddd; /* Nền xám nhạt */
        padding: 20px; /* Đệm xung quanh */
        border-radius: 8px; /* Làm tròn góc */
        width: 45%; /* Chiếm 45% chiều rộng vùng chứa */
    }

        .contact-info h2, .contact-form h2 {
            color: #ff6a00; /* Màu chữ cam cho tiêu đề */
            margin-bottom: 15px; /* Khoảng cách dưới tiêu đề */
        }

        .contact-info p {
            margin: 10px 0; /* Khoảng cách dọc giữa các đoạn văn */
        }

        /* Thiết lập kiểu cho input và textarea trong form */
        .contact-form form input,
        .contact-form form textarea {
            width: 100%; /* Chiếm toàn bộ chiều rộng vùng chứa */
            padding: 10px; /* Đệm xung quanh */
            margin: 10px 0; /* Khoảng cách dọc giữa các trường nhập */
            border: 1px solid #ccc; /* Viền xám nhạt */
            border-radius: 4px; /* Làm tròn góc */
        }

        /* Thiết lập kiểu cho nút trong form */
        .contact-form form button {
            background-color: #ff6a00; /* Màu nền cam */
            border: none; /* Không có viền */
            padding: 10px; /* Đệm xung quanh */
            color: white; /* Màu chữ trắng */
            cursor: pointer; /* Con trỏ thành hình bàn tay khi hover */
            width: 100%; /* Chiều rộng bằng với vùng chứa */
            text-align: center; /* Căn giữa chữ trong nút */
        }

            /* Thiết lập hover cho nút trong form */
            .contact-form form button:hover {
                background-color: #e65c00; /* Đổi nền sang cam đậm khi hover */
            }

        /* Thiết lập kiểu cho textarea */
        .contact-form form textarea {
            min-height: 150px; /* Chiều cao tối thiểu của ô nhập */
            resize: vertical; /* Cho phép người dùng thay đổi chiều cao */
        }

    /* Container footer tổng */
    .footer-section {
        background-image: url('../../content/pictures/bgs2.jpg');
        color: #ffffff; /* Màu chữ trắng */
        padding: 40px 20px; /* Đệm trên và dưới 40px, trái phải 20px */
        font-size: 14px; /* Kích thước chữ 14px */
        max-width: 1200px; /* Giới hạn chiều rộng tối đa 1200px */
        margin: 0 auto; /* Căn giữa footer */
    }

    .footer-container {
        display: flex; /* Sử dụng flex để bố trí ngang */
        justify-content: space-between; /* Căn đều các phần tử con */
        max-width: 1200px; /* Giới hạn chiều rộng tối đa */
        margin: 0 auto; /* Căn giữa container */
    }

    /* Thiết lập kiểu cho phần thông tin liên hệ */
    .footer-info {
        width: 30%; /* Chiếm 30% chiều rộng vùng chứa */
    }

    .footer-logo {
        max-width: 150px; /* Chiều rộng tối đa của logo là 150px */
        margin-bottom: 20px; /* Khoảng cách dưới logo */
    }

    .footer-info p {
        margin: 10px 0; /* Khoảng cách dọc giữa các đoạn văn */
    }

    .footer-info a {
        color: #f37021; /* Màu cam cho liên kết */
        text-decoration: none; /* Bỏ gạch chân */
    }

        .footer-info a:hover {
            text-decoration: underline; /* Thêm gạch chân khi hover */
        }

    /* Thiết lập kiểu biểu tượng mạng xã hội */
    .social-icons a {
        color: #ffffff; /* Màu trắng cho biểu tượng */
        margin-right: 10px; /* Khoảng cách ngang giữa các biểu tượng */
        font-size: 18px; /* Kích thước biểu tượng 18px */
    }

        .social-icons a:hover {
            color: #f37021; /* Đổi màu cam khi hover */
        }

    /* Thiết lập kiểu cho phần chính sách */
    .footer-policy {
        width: 30%; /* Chiếm 30% chiều rộng vùng chứa */
    }

        .footer-policy h4 {
            color: #f37021; /* Màu cam cho tiêu đề */
            margin-bottom: 15px; /* Khoảng cách dưới tiêu đề */
            font-size: 18px; /* Kích thước chữ 18px */
        }

        .footer-policy ul {
            list-style-type: none; /* Bỏ dấu đầu dòng */
            padding: 0; /* Xóa đệm mặc định */
        }

            .footer-policy ul li {
                margin-bottom: 10px; /* Khoảng cách dưới mỗi mục */
            }

                .footer-policy ul li a {
                    color: #ffffff; /* Màu trắng cho liên kết */
                    text-decoration: none; /* Bỏ gạch chân */
                }

                    .footer-policy ul li a:hover {
                        text-decoration: underline; /* Thêm gạch chân khi hover */
                    }

    /* Thiết lập kiểu cho phần tải ứng dụng */
    .footer-download {
        width: 30%; /* Chiếm 30% chiều rộng vùng chứa */
    }

        .footer-download h4 {
            color: #f37021; /* Màu cam cho tiêu đề */
            margin-bottom: 15px; /* Khoảng cách dưới tiêu đề */
            font-size: 18px; /* Kích thước chữ 18px */
        }

    .app-icons img {
        max-width: 120px; /* Chiều rộng tối đa của biểu tượng ứng dụng */
        margin-right: 10px; /* Khoảng cách phải giữa các biểu tượng */
    }

    .gov-badge {
        max-width: 150px; /* Chiều rộng tối đa của huy hiệu chính phủ */
        margin-top: 10px; /* Khoảng cách trên huy hiệu */
    }

    /* Thiết lập kiểu cho phần thông tin công ty */
    .footer-company-info {
        text-align: center; /* Căn giữa văn bản */
        margin-top: 0; /* Xóa khoảng cách trên */
        border-top: 1px solid #444; /* Viền trên*/
    }
</style>
